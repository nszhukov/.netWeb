
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@model Ecommerce.Models.Account;

<ul class="breadcrumb">
    <li><a asp-controller="home" asp-action="index">Главная</a> <span class="divider">/</span></li>
    <li class="active">Вход</li>
</ul>
<h3>Вход в аккаунт</h3>
<div class="well">

    @if (ViewBag.error != null)
    {
        <div class="alert alert-error">
            <p>
                @ViewBag.error
            </p>
        </div>
    }

    <form class="form-horizontal" asp-controller="customer" asp-action="login" method="post">

        <div class="control-group">
            <label class="control-label" for="username">Имя пользователя<sup>*</sup></label>
            <div class="controls">
                <input type="text" id="username" placeholder="Username" required="required" name="username">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="password">Пароль<sup>*</sup></label>
            <div class="controls">
                <input type="password" id="password" placeholder="Password" name="password">
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <input class="btn btn-large btn-success" type="submit" value="Войти">
                <br />
                <a asp-controller="customer" asp-action="register">Зарегистрироваться</a>
            </div>
        </div>
    </form>
</div>