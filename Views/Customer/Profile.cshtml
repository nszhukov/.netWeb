
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@model Ecommerce.Models.Account;

<ul class="breadcrumb">
    <li><a asp-controller="home" asp-action="index">Главная</a> <span class="divider">/</span></li>
    <li class="active">Регистрация</li>
</ul>
<h3>Profile</h3>
<div class="well">
    
    <form class="form-horizontal" asp-controller="customer" asp-action="profile" method="post">

        <div class="control-group">
            <label class="control-label" for="username">Username<sup>*</sup></label>
            <div class="controls">
                <input type="text" id="username" placeholder="Username" required="required" asp-for="UserName" readonly="readonly">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="password">Password<sup></sup></label>
            <div class="controls">
                <input type="password" id="password" placeholder="Password" asp-for="Password">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="fullName">Full Name<sup>*</sup></label>
            <div class="controls">
                <input type="text" id="fullName" placeholder="Full Name" required="required" asp-for="FullName">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="email">Email<sup>*</sup></label>
            <div class="controls">
                <input type="email" id="email" placeholder="Email" required="required" asp-for="Email">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="address">Address<sup>*</sup></label>
            <div class="controls">
                <input type="text" id="address" placeholder="Address" required="required" asp-for="Address">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="phone">Phone<sup></sup></label>
            <div class="controls">
                <input type="tel" id="phone" placeholder="Phone" asp-for="Phone">
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <input class="btn btn-large btn-success" type="submit" value="Save">
                <input type="hidden" asp-for="Id" />
            </div>
        </div>

    </form>
</div>