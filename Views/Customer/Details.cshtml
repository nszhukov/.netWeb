
@{
    ViewData["Title"] = "Invoice Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@model Ecommerce.Models.Account;

<ul class="breadcrumb">
    <li><a asp-controller="home" asp-action="index">Главная</a> <span class="divider">/</span></li>
    <li class="active">Избранное</li>
</ul>

<section id="Table">
    <div class="page-header">
        <h3>Invoice Details</h3>
    </div>
    <div class="row-fluid">

        <div class="span12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Product Id</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Sub Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoicesDetail in ViewBag.invoicesDetails)
                    {
                        <tr>
                            <td>@invoicesDetail.Product.Id</td>
                            <td>@invoicesDetail.Product.Name</td>
                            <td>$@invoicesDetail.Price</td>
                            <td>@invoicesDetail.Quantity</td>
                            <td>$@(invoicesDetail.Price * invoicesDetail.Quantity)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</section>
